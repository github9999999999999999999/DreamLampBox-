<?xml version="1.0" encoding="utf-8"?>
<!-- TV盒子遥控器焦点消失动画 - 平滑恢复 -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="150"> <!-- 与获得焦点保持同步 -->
    
    <!-- 恢复原始大小 -->
    <scale
        android:fromXScale="1.05"
        android:toXScale="1.0"
        android:fromYScale="1.05"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%" />
    
    <!-- 恢复透明度 -->
    <alpha
        android:fromAlpha="0.95"
        android:toAlpha="1.0" />
    
    <!-- 恢复位置 -->
    <translate
        android:fromYDelta="-2%"
        android:toYDelta="0%" />
</set>