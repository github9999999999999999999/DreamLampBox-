<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <!-- Layer 0: Video Player (Always Full Screen, Bottom) -->
    <!-- CRITICAL: resize_mode="zoom" enforces CenterCrop behavior -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:resize_mode="zoom" />

    <!-- Optional: No Video Text -->
    <TextView
        android:id="@+id/tv_no_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="请放入视频文件（支持 MKV/MP4 等）"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <!-- Layer 1: Side Menu Overlay (Top, Right Aligned) -->
    <!-- layout_gravity="end" ensures it floats on the right -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_videos"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#CC000000"
        android:padding="0dp"
        android:clipToPadding="false"
        android:visibility="gone" />

</FrameLayout>